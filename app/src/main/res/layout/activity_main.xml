<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#77DDDD">
    <EditText
        android:id="@+id/nameEditText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#FBFBFB"
        android:hint="Veuillez saisissez le nom"
        android:textColor="#0C0C0C"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/showBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="afficher"
        android:layout_marginRight="15dp"
        android:layout_toEndOf="@id/nameEditText"
        android:layout_toRightOf="@id/nameEditText" />
        android:textSize="15sp"

    <ScrollView
        android:id="@+id/sView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showBtn">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/dynLinearLayout">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
